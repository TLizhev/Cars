@model Cars.Models.Cars.AddCarFormModel
@{
    ViewData["Title"] = "Add Car";
}

<div class="container">
    <div class="col-8 offset-2">
        <form method="post">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="BMW, Mercedes, etc...">
                <span asp-validation-for="Brand" class="small text-danger"></span>
            </div><div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" placeholder="640D, S-Class, etc... ">
                <span asp-validation-for="Model" class="small text-danger"></span>


            </div><div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Add description here"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>


            </div><div class="form-group">
                <label asp-for="Year"></label>
                <input asp-for="Year" class="form-control" placeholder="Between 2000 and @DateTime.UtcNow.Year">
                <span asp-validation-for="Year" class="small text-danger"></span>


            </div><div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Image url here">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>


            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <input class="btn btn-primary float-right" type="submit" value="Save" />
        </form>

    </div>
</div>